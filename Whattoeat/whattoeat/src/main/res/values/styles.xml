<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:visibility">gone</item>
    </style>


    <style name="recipe_list_frame" parent="AppTheme">
        <item name="android:background">#333333</item>
    </style>

    <style name="recipe_list_separator" parent="AppTheme">
        <item name="android:background">#FAFAFA</item>
    </style>

    <style name="recipe_list_subtitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="recipe_list_item" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:background">#11FFFFFF</item>
    </style>

    <style name="recipe_list_item_create_new" parent="@android:style/Widget.TextView">
        <item name="android:background">#114444FF</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="recipe_list_item_selected" parent="@android:style/Widget.TextView">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#333333</item>
    </style>
</resources>
