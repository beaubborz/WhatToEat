<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beaubbe.whattoeat.activities.ShowCalendar$PlaceholderFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/calendar_container"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/calendar_container"
        android:layout_above="@+id/add_button">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/day_preview"
            android:name="com.beaubbe.whattoeat.widgets.DayPreview"
            tools:layout="@layout/day_preview_widget" />
    </FrameLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_button"
        android:layout_alignParentBottom="true"
        android:background="#AAAAFF"
        android:text="add recipe..."
        android:onClick="addRecipeToDate"/>

</RelativeLayout>
